import pandas as pd
import matplotlib.pyplot as plt
sales_data=pd.read_csv('sales_data.csv')
sales_data['Date']=pd.to_datetime(sales_data['Date'])
sales_data['Total_sales']=sales_data['quantity']*sales_data['price']
region_sales=sales_data.groupby('region')['Total_sales'].sum().reset_index()
time_trends=sales_data.groupby('Date')['Total_sales'].sum().reset_index()
product_sales=sales_data.groupby('product')['Total_sales'].sum().reset_index()
product_sales.sort_values(by='Total_sales',ascending=False)
sales_data['Total_sales']=sales_data['Total_sales'].fillna(0)
plt.plot(time_trends['Date'],time_trends['Total_sales'],marker='o')
plt.title('Sales trends over time')
plt.xlabel('Date')
plt.ylabel('sales')
plt.gca().set_facecolor('lightblue')
plt.gcf().set_facecolor('lightgrey')
plt.show()
plt.plot(region_sales['region'],region_sales['Total_sales'],color=['blue','orange'])
plt.title('region wise total sales')
plt.xlabel('region')
plt.ylabel('Total sales')
plt.gca().set_facecolor('lightblue')
plt.gcf().set_facecolor('lightgrey')
plt.show()
pivot=sales_data.pivot_table(values='Total_sales',index='region',column='product',aggfunc='sum',fill_value=0)
print(pivot)
